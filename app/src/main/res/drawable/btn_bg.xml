<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    <item android:state_pressed="true" android:drawable="@color/black"/>
        <item android:state_selected="true" android:drawable="@color/black"/>
        <item android:drawable="@color/dark_reddish"/>-->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#004F81" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#673AB7"
                android:endColor="#A949BA"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#673AB7" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>